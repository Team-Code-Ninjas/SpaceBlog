@model SpaceBlog.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <h3>Are you sure you want to suspend this account?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <span class="glyphicon glyphicon-user"></span> Full Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                <span class="glyphicon glyphicon-envelope"></span> Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                <span class="glyphicon glyphicon-calendar"></span> Date Registered
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateRegistered)
            </dd>
            <dt>
                @*Last login*@
            </dt>

            <dd>
                @*Last login*@
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Suspend" class="btn btn-danger" />
                @Html.ActionLink("Back", "Index", new { id = Model.Id }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>