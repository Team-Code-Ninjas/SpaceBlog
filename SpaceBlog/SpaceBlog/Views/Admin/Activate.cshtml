@model SpaceBlog.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <h3>Are you sure you want to activate this account?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Username
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Fullname
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)

            </dd>

            <dt>
                @*Registration date*@
            </dt>

            <dd>
                @*Registration date*@
            </dd>
            <dt>
                @*Last login*@
            </dt>

            <dd>
                @*Last login*@
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Activate" class="btn btn-danger" />
                @Html.ActionLink("Back", "Index", new { id = Model.Id }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>