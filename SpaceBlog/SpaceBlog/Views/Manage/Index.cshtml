@model SpaceBlog.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Account";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h4>Change your account settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Password:</dt>
            <dd>               
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Change your password", "ChangePassword", null, new {@class =  "btn btn-sm btn-primary" })
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }                
        </dl>
    </div>
</div>