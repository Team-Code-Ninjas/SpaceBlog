@model  SpaceBlog.Models.ApplicationUser

@{
    ViewBag.Title = "User - ";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
    <hr />
</div>
   
<div class="container">
    <h3>Article Created</h3>
    <table id="articleTable" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Context
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
    </table>
    <hr />
    <br />
    <br />
</div> 

<div class="container">
    <h3>Comments Created</h3>
    <table id="comentTable" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>
                    Comments
                </th>                    
            </tr>
        </thead>
    </table>
</div> 

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('#articleTable').DataTable();
        });
    </script>

<script>
        $(document).ready(function () {
            $('#comentTable').DataTable();
        });
</script>
}