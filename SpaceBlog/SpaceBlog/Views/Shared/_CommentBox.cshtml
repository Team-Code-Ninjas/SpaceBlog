@model SpaceBlog.Models.CommentViewModel
<dl class="dl-horizontal">
    <dd>
        <div class="commentBox">
            @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.AuthorId)
                @Html.HiddenFor(m => m.ArticleId)
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-4 control-label">
                           <span> Leave your comment:</span>
                        </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="hidden" name="Rating" id="Rating" value="0" />
                            <input type="submit" id="btnRegister" name="btnRegister" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
            }
        </div>
    </dd>
</dl>